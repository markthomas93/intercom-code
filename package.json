{
  "name": "intercom-code",
  "description": "A chrome extension for writing code snippets with Intercom",
  "author": "Saad Quadri",
  "license": "MIT",
  "version": "0.1.0",
  "scripts": {
    "build": "webpack --mode production ./src/content/index.js --output ./dist/content.js",
    "clean": "trash dist",
    "coverage": "flow-coverage-report -i 'src/content/**/*.js'",
    "develop": "webpack --mode development --watch ./src/content/index.js --output ./dist/content.js",
    "format": "prettier --write \"src/content/**/*.*\"",
    "lint": "blyss | snazzy",
    "rebuild": "npm run clean && npm run build",
    "test": "npm run lint && npm run typecheck",
    "typecheck": "flow"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "blyss": "^11.0.0",
    "copy-webpack-plugin": "^4.5.1",
    "flow-bin": "^0.68.0",
    "flow-coverage-report": "^0.5.0",
    "flow-interfaces-chrome": "^0.4.0",
    "prettier": "^1.11.1",
    "snazzy": "^7.1.1",
    "trash-cli": "^1.4.0",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.11"
  },
  "blyss": {
    "ignore": [
      "src/assets/**/*.*"
    ]
  }
}
